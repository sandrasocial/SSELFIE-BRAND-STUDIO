{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Express Server (server/index.ts)",
      "program": "${workspaceFolder}/server/index.ts",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}/server",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
