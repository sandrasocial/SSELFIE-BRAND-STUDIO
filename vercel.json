{
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/me.ts": {
      "maxDuration": 30
    },
    "api/gallery-images.ts": {
      "maxDuration": 30
    },
    "api/index.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/training-completion-monitor",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/generation-completion-monitor",
      "schedule": "* * * * *"
    }
  ]
}