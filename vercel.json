{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/**/*.ts": { "runtime": "vercel/node@20.x" },
    "api/**/*.js": { "runtime": "vercel/node@20.x" }
  },
  
  "rewrites": [
    { "source": "/site.webmanifest", "destination": "/manifest.json" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
