{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/handler/sign-in",
      "destination": "/client/dist/index.html"
    },
    {
      "source": "/handler/sign-up", 
      "destination": "/client/dist/index.html"
    },
    {
      "source": "/handler/(.*)",
      "destination": "/client/dist/index.html"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
