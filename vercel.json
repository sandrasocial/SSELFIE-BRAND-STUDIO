{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/handler/(.*)",
      "destination": "/api/handler/[...path].ts"
    },
    {
      "source": "/((?!api/|handler/).*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
