# ================================
# SSELFIE STUDIO - COMPLETE ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and fill in your actual values
# ================================

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/sselfie_studio?sslmode=require

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=5000
APP_NAME=SSELFIE_STUDIO_DEV

# ================================
# AUTHENTICATION & SECURITY
# ================================
SESSION_SECRET=your_super_secure_session_secret_here_minimum_32_chars
ADMIN_USER_ID=your_admin_user_id_here
SHANNON_USER_ID=your_shannon_user_id_here

# ================================
# AI SERVICES
# ================================
# Anthropic Claude API (Primary AI Agent Service)
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here

# Replicate API (Image Generation & Model Training)
REPLICATE_API_TOKEN=r8_your_replicate_token_here
REPLICATE_USERNAME=your_replicate_username

# ================================
# PAYMENT PROCESSING
# ================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Client-side Stripe (VITE_* variables are accessible in frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ================================
# CLOUD STORAGE (AWS S3)
# ================================
AWS_ACCESS_KEY_ID=AKIA_your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_S3_BUCKET=sselfie-studio-images
AWS_REGION=us-east-1

# ================================
# EMAIL SERVICES
# ================================
# Resend (Primary Email Service)
RESEND_API_KEY=re_your_resend_api_key_here

# SendGrid (Alternative/Backup Email Service)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ================================
# EXTERNAL INTEGRATIONS
# ================================
# Flodesk Email Marketing
FLODESK_API_KEY=your_flodesk_api_key_here

# ManyChat Integration
MANYCHAT_API_TOKEN=your_manychat_token_here

# Instagram Business API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Make.com Automation
MAKE_API_TOKEN=your_make_api_token_here
MAKE_WEBHOOK_URL=https://hook.integromat.com/your_webhook_url

# ================================
# CACHING & SESSION STORAGE
# ================================
# Redis (Optional - using memory store if not provided)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ================================
# MONITORING & ANALYTICS
# ================================
# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# ================================
# DEVELOPMENT & BUILD SETTINGS
# ================================
FORCE_REINSTALL=true
SKIP_BUILD_CACHE=true
NODE_OPTIONS=--max-old-space-size=8192

# ================================
# MODEL TRAINING CONFIGURATION
# ================================
MODEL_BASE_PATH=models
TRAINING_TIMEOUT=3600
GENERATION_TIMEOUT=300

# ================================
# REPLIT SPECIFIC (Auto-configured)
# ================================
# These are automatically set by Replit - don't modify
REPL_ID=auto_set_by_replit
REPL_OWNER=auto_set_by_replit
REPL_SLUG=auto_set_by_replit

# ================================
# BACKUP & RECOVERY
# ================================
BACKUP_BUCKET=sselfie-studio-backups
BACKUP_INTERVAL=86400

# ================================
# API RATE LIMITING
# ================================
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# ================================
# WEBHOOK CONFIGURATIONS
# ================================
WEBHOOK_SECRET=your_webhook_verification_secret
STRIPE_WEBHOOK_ENDPOINT_SECRET=whsec_your_stripe_endpoint_secret

# ================================
# FEATURE FLAGS
# ================================
ENABLE_MODEL_TRAINING=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false