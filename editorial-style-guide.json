{
  "typography": {
    "headlines": {
      "fontFamily": "Times New Roman, serif",
      "textTransform": "uppercase",
      "letterSpacing": "0.05em"
    },
    "bodyText": {
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
    },
    "responsive": {
      "base": "clamp(1rem, 1vw + 0.75rem, 1.25rem)",
      "h1": "clamp(2rem, 3vw + 1.5rem, 4rem)",
      "h2": "clamp(1.75rem, 2.5vw + 1.25rem, 3rem)",
      "h3": "clamp(1.5rem, 2vw + 1rem, 2.5rem)"
    }
  },
  "colors": {
    "primary": "#0a0a0a",
    "white": "#ffffff",
    "editorial": "#f5f5f5"
  },
  "layout": {
    "sectionPadding": "120px",
    "maxWidth": "1400px"
  }
}