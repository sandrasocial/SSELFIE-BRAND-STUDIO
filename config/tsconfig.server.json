{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./server",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["ES2020", "ES2020.Promise", "ES2020.String", "ES2020.Array"]
  },
  "include": ["server/**/*"],
  "exclude": ["server/**/*.test.ts", "node_modules", "dist", "client/**/*"]
}