{
  "brand": {
    "name": "SSELFIE",
    "tagline": "Editorial Styleguide",
    "mission": "Transform selfies into professional brand photos with AI"
  },
  "colors": {
    "primary": {
      "black": "#0a0a0a",
      "white": "#ffffff"
    },
    "editorial": {
      "editorialGray": "#f5f5f5",
      "midGray": "#fafafa",
      "softGray": "#666666",
      "accentLine": "#e5e5e5"
    },
    "usage": {
      "background": "#ffffff",
      "text": "#0a0a0a",
      "selection": "#0a0a0a on #ffffff"
    }
  },
  "typography": {
    "primary": {
      "family": "Times New Roman, serif",
      "weight": "200",
      "usage": "Headlines, hero text, editorial quotes"
    },
    "secondary": {
      "family": "-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "weight": "300",
      "usage": "Body text, descriptions"
    },
    "sizes": {
      "heroMain": "clamp(5rem, 12vw, 12rem)",
      "heroSub": "clamp(1.5rem, 4vw, 3rem)",
      "h1": "clamp(4rem, 8vw, 8rem)",
      "h2": "clamp(3rem, 6vw, 6rem)",
      "h3": "clamp(2rem, 4vw, 4rem)",
      "editorialQuote": "clamp(2rem, 5vw, 4rem)",
      "body": "16px",
      "large": "20px",
      "eyebrow": "11px",
      "nav": "11px"
    },
    "styles": {
      "letterSpacing": {
        "tight": "-0.02em",
        "normal": "-0.01em", 
        "wide": "0.3em",
        "extraWide": "0.4em",
        "heroWide": "0.5em"
      },
      "textTransform": "uppercase",
      "lineHeight": {
        "tight": "0.9",
        "normal": "1",
        "relaxed": "1.6"
      }
    }
  },
  "layout": {
    "maxWidth": "1400px",
    "padding": "40px",
    "grid": {
      "columns": 12,
      "gap": "30px"
    },
    "sections": {
      "padding": "120px 0"
    },
    "responsive": {
      "tablet": "1024px",
      "mobile": "768px"
    }
  },
  "components": {
    "hero": {
      "minHeight": "100vh",
      "background": "#0a0a0a",
      "color": "#ffffff",
      "textAlign": "center",
      "overlay": "opacity: 0.4"
    },
    "cards": {
      "background": "#ffffff",
      "hoverBackground": "#0a0a0a",
      "hoverColor": "#ffffff",
      "padding": "60px",
      "transition": "500ms ease"
    },
    "buttons": {
      "padding": "16px 32px",
      "fontSize": "11px",
      "letterSpacing": "0.3em",
      "textTransform": "uppercase",
      "border": "1px solid #0a0a0a",
      "transition": "300ms ease"
    },
    "images": {
      "aspectRatios": {
        "portrait": "4/5",
        "square": "1/1", 
        "wide": "16/9",
        "editorial": "3/4"
      },
      "hover": "transform: scale(1.05)",
      "transition": "1000ms cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "navigation": {
    "position": "fixed",
    "background": "rgba(255, 255, 255, 0.95)",
    "backdropFilter": "blur(10px)",
    "border": "1px solid #e5e5e5",
    "logo": {
      "family": "Times New Roman, serif",
      "size": "20px",
      "weight": "400"
    },
    "menu": {
      "fontSize": "11px",
      "letterSpacing": "0.3em",
      "textTransform": "uppercase",
      "gap": "40px"
    }
  },
  "effects": {
    "selection": {
      "background": "#0a0a0a",
      "color": "#ffffff"
    },
    "hover": {
      "opacity": "0.6",
      "transition": "300ms ease"
    },
    "textOverlay": {
      "gradient": "linear-gradient(to bottom, transparent 50%, rgba(10, 10, 10, 0.9) 100%)",
      "transition": "500ms ease"
    }
  }
}