{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "noEmitOnError": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client/",
    "server/__tests__/**",
    "server/tests/**",
    "server/enterprise/**",
    "server/services/veo-service.ts",
    "server/services/website-generator.ts",
    "server/services/claude-api-service-simple.ts",
    "server/agents/personalities/personality-config.ts",
    "server/services/unified-state-manager.ts",
    "server/services/gmail-integration.ts",
    "server/agents/personality-integration-service.ts",
    "server/middleware/admin-middleware.ts",
    "server/tools/agent_handoff.ts",
    "server/services/hybrid-intelligence/**",
    "server/services/agent-coordination-bridge.ts",
    "server/workflows/active/workflow-persistence.ts",
    "server/services/workflow-executor.ts",
    "server/generation-completion-monitor.ts",
    "server/tools/**",
    "server/utils/testing-framework.ts",
    "server/utils/testing.ts",
    "server/tests/**",
    "shared/types/**"
  ]
}
