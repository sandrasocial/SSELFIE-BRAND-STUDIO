# Environment Configuration Template
# Copy this to .env and fill in actual values

# Database
DATABASE_URL=your_database_url_here

# Stack Auth
STACK_SECRET_SERVER_KEY=your_stack_secret_server_key
VITE_STACK_PUBLISHABLE_CLIENT_KEY=your_vite_stack_publishable_client_key

# External Services
REPLICATE_API_TOKEN=your_replicate_token
REPLICATE_USERNAME=your_replicate_username
ANTHROPIC_API_KEY=your_anthropic_key

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# Admin Configuration
ADMIN_USER_ID=your_admin_user_id
SHANNON_USER_ID=your_shannon_user_id

# Email & Communication
FLODESK_API_KEY=your_flodesk_key
RESEND_API_KEY=your_resend_key

# Social Media
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_id
META_ACCESS_TOKEN=your_meta_token
MANYCHAT_API_TOKEN=your_manychat_token
MAKE_API_TOKEN=your_make_token

# Server Configuration
NODE_ENV=development
PORT=3001
REPLIT_DEV_DOMAIN=your_replit_domain

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret
TESTING_VITE_STRIPE_PUBLIC_KEY=your_stripe_public_test_key

# Stage Mode Configuration
ALLOWED_EMBED_HOSTS="mentimeter.com,*.mentimeter.com,canva.com,*.canva.com"
LIVE_SOCKET_ENABLED=1